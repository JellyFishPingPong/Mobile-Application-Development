<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="forum_cards">
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="forum_like_button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="comment_cards">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardBackgroundColor">@color/lighter_gray</item>
    </style>

    <style name="phone_style">
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="guideline_fontStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="CustomCalendarTextAppearance">
        <item name="android:textColor">@color/cream</item> <!-- Set the desired text color -->
    </style>

    <style name="CustomCalendarMonth" >
        <item name="android:textColorPrimary">@color/cream</item>
    </style>
</resources>